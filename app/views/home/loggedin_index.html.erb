<h1>Email Transparency</h1>

<div>
	<h2>Your Groups</h2>
	<ul>
		<% current_user.groups.each do |group| %>
		<li><%= group.name %>
			<pre><%= group.rules %></pre>
		</li>
		<% end %>
	</ul>
</div>

<div>
	<h2>Sync</h2>
	<%= form_tag("/sync", method: "post") do %>
		From:
			<%= select_tag(:from_account_id, options_from_collection_for_select(current_user.account_link, :id, :username)) %>
		To:
			<%= select_tag(:to_account_id, options_from_collection_for_select(current_user.account_link, :id, :username)) %>

	  <%= submit_tag("Sync") %>
	<% end %>
</div>

<div>
	<h2>Sync All</h2>
	<%= form_tag("/sync_all", method: "post") do %>
	  <%= submit_tag("Sync All") %>
	<% end %>
</div>

<div>
	<h2>Reset History</h2>
	<%= form_tag("/reset_history_id", method: "post") do %>
	  <%= submit_tag("Reset History IDs") %>
	<% end %>
</div>

<div>
	<h2>Add Watch</h2>
	<%= form_tag("/add_watch", method: "post") do %>
		Account:
			<%= select_tag(:account_link_id, options_from_collection_for_select(current_user.account_link, :id, :username)) %>

	  <%= submit_tag("Add Watch") %>
	<% end %>
</div>

<div>
	<h2>Access Check</h2>
	<a href="/access_check">Access Check</a>
</div>


<div>
	<h2>Link a Google Account</h2>
	<a href="/auth/google_oauth2">Link a Google Account</a>
</div>